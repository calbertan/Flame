<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/rectangle1"
    android:layout_height="wrap_content" >
    <ScrollView android:id="@+id/Loginpage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <RelativeLayout android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <View   android:id="@+id/_bg__Loginpage"
                android:background="@drawable/login_page"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <RelativeLayout android:id="@+id/Content"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >


                <View
                    android:id="@+id/BG"
                    android:layout_width="360dp"
                    android:layout_height="800dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/bg_shape" />

                <ImageView
                    android:id="@+id/Rectangle1"
                    android:layout_width="360dp"
                    android:layout_height="800dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="Rectangle 1"
                    android:src="@drawable/rectangle1" />

                <RelativeLayout android:id="@+id/Frame2"
                    android:layout_marginTop="220dp"
                    android:layout_marginStart="74dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/Vector"
                        android:layout_width="213.17dp"
                        android:layout_height="73.22dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:contentDescription="Vector"
                        android:src="@drawable/loginback" />

                </RelativeLayout>


                <RelativeLayout android:id="@+id/Frame3"
                    android:layout_marginTop="629dp"
                    android:layout_marginStart="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <View   android:id="@+id/Rectangle2"
                        android:background="@drawable/rectangle2_shape"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_width="360dp"
                        android:layout_height="171dp" />


                    <RelativeLayout android:id="@+id/Frame1"
                        android:layout_marginTop="39dp"
                        android:layout_marginStart="55dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <View   android:id="@+id/Rectangle3"
                            android:background="@drawable/rectangle3_shape"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_width="250dp"
                            android:layout_height="47dp" />

                        <TextView android:id="@+id/GetStarted"
                            android:clickable="true"
                            android:layout_gravity="center_horizontal|center"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="@color/_bg__Loginpage_color"
                            android:layout_marginLeft="36dp"
                            android:layout_marginTop="11dp"
                            android:layout_width="184dp"
                            android:layout_height="36.5dp"
                            android:text="@string/Get_Started_string"
                            />

                    </RelativeLayout>


                    <RelativeLayout android:id="@+id/No_Account_Signin"
                        android:layout_marginTop="95dp"
                        android:layout_marginStart="61dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <TextView android:id="@+id/No_Account_Signup"
                            android:layout_gravity="center_horizontal|center"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="@color/donthaveaccount"
                            android:layout_marginLeft="-3dp"
                            android:layout_marginTop="0dp"
                            android:layout_width="257dp"
                            android:layout_height="23.5dp"
                            android:text="@string/No_Account"
                            />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
</HorizontalScrollView>
